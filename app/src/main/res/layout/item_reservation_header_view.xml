<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="announcement"
            type="com.artilearn.happygolfgo.data.announcement.Announcement" />

        <variable
            name="examination"
            type="com.artilearn.happygolfgo.data.examination.Examination" />

        <variable
            name="vm"
            type="com.artilearn.happygolfgo.ui.home.reservation.ReservationViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/ll_announcement"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/shape_radius8"
                android:backgroundTint="@color/gray100"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:onClick="@{()->vm.onClickAnnouncement()}">

                <TextView
                    android:background="@drawable/shape_radius4"
                    android:backgroundTint="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="12dp"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="8dp"
                    android:textStyle="bold"
                    android:text="@string/announcement_left_in_header_view_in_reservation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:singleLine="true"
                    android:text="@{announcement.subject}"
                    android:textColor="@color/color_black"
                    android:textSize="14dp"
                    android:clickable="false"
                    android:textStyle="bold"
                    tools:text="월례회 시작일"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_right"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_divider_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_announcement">

            <androidx.viewpager2.widget.ViewPager2
                android:background="@color/color_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_examination_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_divider_1">
            <LinearLayout
                android:id="@+id/ll_examination_info_view"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:weightSum="10"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/color_exam_in_header_view_in_reservation"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/exam_left_in_header_view_in_reservation"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="start|center"
                    android:weightSum="5"
                    >

                    <!--                        android:singleLine="true"-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="bottom|center_horizontal"
                        android:text="@{examination.subject}"
                        android:textColor="@color/color_black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:text="다음 시험 시작일 : 2월 20일"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="top|center_horizontal"
                        android:paddingStart="0dp"
                        android:paddingEnd="10dp"
                        android:text="@{examination.contents}"
                        android:textColor="@color/color_exam_in_header_view_in_reservation"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:text="시작까지 13일 15시간 남음" />
                </LinearLayout>
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:weightSum="2"
                    >
                    <TextView
                        android:id="@+id/tv_more_in_exam"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="10dp"
                        android:paddingStart="0dp"
                        android:gravity="end|center"
                        android:textColor="@color/color_more_in_header_view_in_reservation"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="@{examination.waiting ? View.VISIBLE : View.GONE}"
                        android:text="@string/more_in_header_view_in_reservation"/>
                    <Button
                        android:id="@+id/btn_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/examination_action_button"
                        android:text="@{examination.actionTitle}"
                        android:textColor="@color/color_white"
                        android:visibility="@{(!examination.waiting &amp;&amp; examination.actionButtonOn) ? View.VISIBLE: View.GONE}"
                        android:onClick="@{()->vm.onClickTakeExam()}"
                        android:contentDescription="@string/exam_action_title_to_taking"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/btn_no_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:enabled="false"
                        android:visibility="@{(!examination.waiting &amp;&amp; !examination.actionButtonOn) ? View.VISIBLE: View.GONE}"
                        android:background="@drawable/examination_no_action_button"
                        android:text="@{examination.actionTitle}"
                        android:textColor="@color/color_white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:contentDescription="@string/exam_action_title_to_taking"
                        />
                </FrameLayout>
            </LinearLayout>
            <!--                android:visibility="@{examination.waiting ? View.GONE: View.VISIBLE}"-->
            <LinearLayout
                android:id="@+id/ll_examination_score_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/ll_examination_info_view">
                <LinearLayout
                    android:id="@+id/ll_divider_2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/color_header_view_background_in_reservation"
                    app:layout_constraintTop_toTopOf="@id/ll_examination_score_view">
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_marginLeft="6dp"
                        android:weightSum="5"
                        android:onClick="@{()->vm.onClickTrainingCenter()}"
                        >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical"
                                android:clickable="false"
                                android:text="@string/exam_putting_title_in_score"/>
                            <TextView
                                android:id="@+id/tw_putting_score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_exam_in_header_view_in_reservation"
                                android:text="@{examination.putting}"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical"
                                android:text="@string/exam_sg_title_in_score"/>
                            <TextView
                                android:id="@+id/tw_sg_score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_exam_in_header_view_in_reservation"
                                android:text="@{examination.sg}"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical"
                                android:text="@string/exam_iron_title_in_score"/>
                            <TextView
                                android:id="@+id/tw_iron_score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_exam_in_header_view_in_reservation"
                                android:text="@{examination.irn}"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical"
                                android:text="@string/exam_wu_title_in_score"/>
                            <TextView
                                android:id="@+id/tw_wu_score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_exam_in_header_view_in_reservation"
                                android:text="@{examination.wu}"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical"
                                android:text="@string/exam_drv_title_in_score"/>
                            <TextView
                                android:id="@+id/tw_drv_score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/color_exam_in_header_view_in_reservation"
                                android:text="@{examination.drv}"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingEnd="10dp"
                        android:paddingStart="0dp"
                        android:gravity="end|center"
                        android:textColor="@color/color_more_in_header_view_in_reservation"
                        android:text="@string/more_in_header_view_in_reservation"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--            시험 정보 안내 -->
        <LinearLayout
            android:id="@+id/ll_my_tickets_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/ll_examination_view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_tickets_title_in_reservation_header_view"
                android:textColor="@color/color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="나의 이용권" />

            <TextView
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/shape_ring"
                android:backgroundTint="@color/red"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textColor="@color/color_white"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:text="3" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>