<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent" android:layout_marginTop="7dp" android:scaleType="fitXY"
            android:layout_height="112dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent" android:layout_marginTop="5dp"
            android:layout_height="36dp"  android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/color_black"
            android:textSize="13sp"
            tools:text="골프영상테스트" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" android:id="@+id/iv_heart"

                android:background="@drawable/t_heart" />

            <TextView
                android:id="@+id/tv_heart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/color_sub_gray"
                android:textSize="11sp"
                tools:text="1" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_marginLeft="10dp"
                android:background="@drawable/t_view" />

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/color_sub_gray"
                android:textSize="11sp"
                tools:text="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="52dp"     android:id="@+id/ll_favor"
                android:layout_height="24dp"
                android:background="@drawable/bookmark_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="10dp"  android:id="@+id/ll_favor_icon"
                    android:layout_height="12dp"
                    android:background="@drawable/favor" />

                <TextView
                    android:layout_width="wrap_content"  android:id="@+id/ll_favor_txt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:textColor="@color/color_black"
                    android:textSize="11sp"
                    android:text="담기" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</layout>